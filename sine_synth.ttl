@prefix atom:  <http://lv2plug.in/ns/ext/atom#> .
@prefix doap: <http://usefulinc.com/ns/doap#> .
@prefix lv2: <http://lv2plug.in/ns/lv2core#> .
@prefix midi:  <http://lv2plug.in/ns/ext/midi#> .
@prefix urid:  <http://lv2plug.in/ns/ext/urid#> .
@prefix units: <http://lv2plug.in/ns/extensions/units#> .

<http://lv2plug.in/plugins/sine_synth>
	a lv2:Plugin ,
		lv2:InstrumentPlugin ;
	doap:maintainer <http://bado.so> ;
	doap:name "Sine Synth";
  doap:creator "Amadeus Folego";
	doap:license <http://opensource.org/licenses/GPL-3.0> ;
  lv2:requiredFeature urid:map;
  
	lv2:port [
    a lv2:InputPort ,
      atom:AtomPort ;
    atom:bufferType atom:Sequence ;
    atom:supports midi:MidiEvent ;
    lv2:index 0 ;
    lv2:symbol "midi_in" ;
    lv2:name "MIDI In" ;
  ] , [
    a lv2:InputPort ;
    a lv2:ControlPort ;
    lv2:index 1 ;
    lv2:symbol "volume" ;
    lv2:name "Volume";
    lv2:default -12.0 ;
    lv2:minimum -90.0 ;
    lv2:maximum 24.0 ;

    units:unit units:db;
  ] , [
    a lv2:InputPort ;
    a lv2:ControlPort ;
    lv2:index 2 ;
    lv2:symbol "panning" ;
    lv2:name "Pan";
    lv2:default 0;
    lv2:minimum -1;
    lv2:maximum 1;
  ] , [
    a lv2:InputPort ;
    a lv2:ControlPort ;
    lv2:index 3 ;
    lv2:symbol "attack_level" ;
    lv2:name "Attack Level";
    lv2:default 1.2;
    lv2:minimum 1;
    lv2:maximum 10;

    units:unit units:coef;
  ] , [
    a lv2:InputPort ;
    a lv2:ControlPort ;
    lv2:index 4 ;
    lv2:symbol "attack_time" ;
    lv2:name "Attack Time";
    lv2:default 25;
    lv2:minimum 0;
    lv2:maximum 5000;

    lv2:portProperty lv2:integer;
    units:unit units:ms;
  ] , [
    a lv2:InputPort ;
    a lv2:ControlPort ;
    lv2:index 5 ;
    lv2:symbol "sustain_level" ;
    lv2:name "Sustain Level";
    lv2:default 1;
    lv2:minimum 0;
    lv2:maximum 1;

    units:unit units:coef;
  ] , [
    a lv2:InputPort ;
    a lv2:ControlPort ;
    lv2:index 6 ;
    lv2:symbol "decay_time" ;
    lv2:name "Decay Time";
    lv2:default 25;
    lv2:minimum 0;
    lv2:maximum 5000;

    lv2:portProperty lv2:integer;
    units:unit units:ms;
  ] , [
    a lv2:InputPort ;
    a lv2:ControlPort ;
    lv2:index 7 ;
    lv2:symbol "release_time" ;
    lv2:name "Release Time";
    lv2:default 100;
    lv2:minimum 0;
    lv2:maximum 5000;

    lv2:portProperty lv2:integer;
    units:unit units:ms;
  ] , [
		a lv2:AudioPort ,
			lv2:OutputPort ;
		lv2:index 8 ;
		lv2:symbol "out_left" ;
		lv2:name "Out Left" ;
  ] , [
		a lv2:AudioPort ,
			lv2:OutputPort ;
		lv2:index 9 ;
		lv2:symbol "out_right" ;
		lv2:name "Out Right" ;
	] .
